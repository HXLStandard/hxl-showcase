########################################################################
# Rewrite rules for clean URLs.
########################################################################

<ifmodule mod_rewrite.c>

RewriteEngine On

RewriteBase /

# General

RewriteRule ^$ index.php?p=home [QSA,L]

RewriteRule ^search$ index.php?p=search [QSA,L]

# Reports and downloads

RewriteRule ^report(?:\.(csv|json|xml))?$ index.php?p=report&format=$1 [QSA,L]

# Sources

RewriteRule ^data$ index.php?p=source-list [QSA,L]

RewriteRule ^data/([\w-]{1,32})$ index.php?p=source&source=$1 [QSA,L]

# Datasets

RewriteRule ^data/([\w-]{1,32})/([\w-]{1,32})$ index.php?p=dataset&source=$1&dataset=$2 [QSA,L]

RewriteRule ^data/([\w-]{1,32})/([\w-]{1,32})/history$ index.php?p=dataset-history&source=$1&dataset=$2 [QSA,L]

RewriteRule ^data/([\w-]{1,32})/([\w-]{1,32})/analysis\.csv$ index.php?p=import-analysis&source=$1&dataset=$2&format=csv [QSA,L]

RewriteRule ^data/([\w-]{1,32})/([\w-]{1,32})/analysis$ index.php?p=import-analysis&source=$1&dataset=$2 [QSA,L]

# Imports

RewriteRule ^data/([\w-]{1,32})/([\w-]{1,32})/([\d:.+-]+)(?:\.(csv))?$ index.php?p=import&source=$1&dataset=$2&import=$3&format=$4 [QSA,L]

RewriteRule ^data/([\w-]{1,32})/([\w-]{1,32})/([\d:.+-]+)/analysis(?:\.(csv))?$ index.php?p=import-analysis&source=$1&dataset=$2&import=$3&format=$4 [QSA,L]

# Tags

RewriteRule ^tag$ index.php?p=tag-list [QSA,L]

RewriteRule ^tag/([\w]{1,32})$ index.php?p=tag&tag=$1 [QSA,L]

# Users

RewriteRule ^user$ index.php?p=user-list [QSA,L]

RewriteRule ^user/([\w-]{1,32})$ index.php?p=user&user=$1 [QSA,L]

</ifmodule>
